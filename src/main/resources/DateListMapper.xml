<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


        <mapper namespace="com.example.DEMO.DateListMapper">
                                              <!--UserMapper.javaのパッケージ名  -->
           <select id="selectAll" resultType="com.example.DEMO.DateList">
                                              <!-- id = DateListMapper.java で指定したメソッド名 -->
                                              <!-- resultType = 返却する型 -->
               select * from datelist
           </select>
           <!--  resultMap id="DateList" type="com.example.DEMO.DateList">
              <id column="id" jdbcType="int"></id>
              <result column="datename" jdbcType="varcher" property="dateName"/>
              <result column="ymd" jdbcType="varcher" property="ymd"></result>
           </resultMap-->

           <select id="select" resultType="com.example.DEMO.DateList">
                  select id,datename,ymd from datelist where id = #{id}
           </select>
           <!--  select id = "count" resultType="com.example.DEMO.DateList">
                  select count(id) from datelist = #{count}
           </select-->
           <insert id="insert">
               insert into datelist (datename) values (#{datename})
           </insert>
           <update id="update">
                update datelist set datename = #{datename} where id = #{id}
           </update>
           <delete id="delete">
                delete from datelist where id = #{id}
           </delete>
        </mapper>
